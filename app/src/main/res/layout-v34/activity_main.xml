<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@android:color/system_surface_container_lowest_dark"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="Calculator"
        android:textColor="@color/white"
        android:textSize="50sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by Subhan Ahmed"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginBottom="50sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/numbering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="30sp"
        android:background="@color/material_dynamic_neutral30"
        android:textSize="30sp"
        android:layout_marginBottom="10sp"
        android:text="0"
        android:textColor="@color/white"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:text="9"
            android:textSize="50sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_light"
            android:text="-"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:text="4"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:text="5"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:text="6"
            android:textSize="50sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:textSize="50sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

        <Button
            android:id="@+id/equalto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:backgroundTint="@color/material_dynamic_neutral_variant40"
            android:textSize="50sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginRight="10sp"
            android:textSize="50sp" />

    </LinearLayout>
</LinearLayout>